<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in</title>
    <link rel="stylesheet" href="/tailwind.css" />
  </head>
  <body class="max-w-5xl mx-auto bg-neutral-950 text-neutral-50">
    <%- include("../partials/navbar", {links: [{href: "/", text:"Home"}]}) %>
    <main class="grid lg:grid-cols-9 lg:gap-28">
      <form action="/user/sign-in" class="px-3 mt-20 lg:col-span-4" method="post">
        <h1 class="mb-5 text-3xl font-bold">Create New Account</h1>
        <%- include("../partials/formErrors") %>
        <label class="block my-10" for="username-input">
          <p>Username:</p>
          <input 
            placeholder="Type here..." 
            class="w-full p-3 my-2 text-base bg-transparent border border-indigo-400 rounded outline-none placeholder:font-light focus:border-fuchsia-400" 
            type="text" 
            name="username" 
            id="username-input" />
        </label>
        <label class="block my-10" for="email-input">
          <p>Email:</p>
          <input 
            placeholder="Type here..." 
            class="w-full p-3 my-2 text-base bg-transparent border border-indigo-400 rounded outline-none placeholder:font-light focus:border-fuchsia-400" 
            type="email" 
            name="email" 
            id="email-input" />
        </label>
        <label class="block my-10" for="password-input">
          <p>Password:</p>
          <input 
            placeholder="Type here..." 
            class="w-full p-3 my-2 text-base bg-transparent border border-indigo-400 rounded outline-none placeholder:font-light focus:border-fuchsia-400" 
            type="password" 
            name="password" 
            id="password-input" />
        </label>
        <label class="block my-10" for="confirm-password-input">
          <p>Confirm password:</p>
          <input
            class="w-full p-3 my-2 text-base bg-transparent border border-indigo-400 rounded outline-none placeholder:font-light focus:border-fuchsia-400" type="text" name="username" id="username-input"
            placeholder="Type here..."
            type="password"
            name="confirmPassword"
            id="confirm-password-input" />   
        </label>     
        <div class="flex justify-around">
          <input 
            class="w-1/2 px-8 py-4 text-lg text-center rounded-full cursor-pointer grow bg-gradient-to-r from-indigo-500 to-fuchsia-500" 
            type="submit" 
            value="Create Account" />
          <a class="px-5 py-4 text-lg text-center grow" href="/">Cancel</a>
        </div>
      </form>
      <div class="justify-center hidden align-center place-self-center h-3/4 lg:flex lg:col-span-5">
        <img src="/img/aurora.jpg" class="aspect-square rounded-3xl brightness-150" alt="">
      </div>
    </main>
    <%- include("../partials/footer") %>
  </body>
</html>
